{
  "manifest_version": 3,
  "name": "Vertical Bookmark List",
  "version": "1.0",
  "description": "Automatically organizes and displays bookmarks from the Vertical-bookmark-list folder.",
  "author": "Your Name",

  "permissions": [
    "bookmarks",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "vertical-bookmarks@example.com",
      "strict_min_version": "109.0"
    }
  },

  "action": {
    "default_title": "Open Vertical Bookmarks",
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
