{
  "manifest_version": 3,
  "name": "Vertical Bookmark List",
  "version": "1.0",
  "description": "Automatically organizes and displays bookmarks from the Vertical-bookmark-list folder.",
  "author": "Your Name",
  
  "permissions": [
    "bookmarks",
    "storage" 
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Open Vertical Bookmarks",
    "default_popup": "options.html",
   },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "offline_enabled": true
}
