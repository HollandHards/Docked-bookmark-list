{
  "manifest_version": 3,
  "name": "Vertical Bookmark Dock",
  "version": "1.9",
  "description": "A Mac-style animated dock for your bookmarks.",
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["adapter.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Open Dock Settings"
  },
  "commands": {
    "toggle_dock": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Command+B"
      },
      "description": "Toggle Dock Visibility"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
